def solve():
    
    N, K = map(int, input("N과 K를 입력하세요: ").split())
    A = list(map(int, input("배열 A를 입력하세요: ").split()))
    B = list(map(int, input("배열 B를 입력하세요: ").split()))

    A.sort()
    B.sort(reverse=True)

    for i in range(K):
        if A[i] < B[i]:
            A[i], B[i] = B[i], A[i]
        else:
            break

    print("결과:", sum(A))

if __name__ == "__main__":
    solve()
